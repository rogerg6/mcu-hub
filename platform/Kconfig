# Kconfig for platform directory
# Platform-specific configuration options

if PLATFORM_STM32F429

config STM32F429_CHIP
	string "STM32F429 Chip Variant"
	default "STM32F429IG"
	help
	  Specific STM32F429 chip variant
	  Options: STM32F429IG, STM32F429VG, STM32F429ZG, etc.
endif

if PLATFORM_STM32F1

config STM32F1_CHIP
	string "STM32F1 Chip Variant"
	default "STM32F103ZG"
	help
	  Specific STM32F1 chip variant

config STM32F1_CLOCK
	int "System Clock (MHz)"
	default 72
	help
	  System clock frequency in MHz

endif

if PLATFORM_ESP32

config ESP32_CHIP
	string "ESP32 Chip Variant"
	default "ESP32-WROOM-32"
	help
	  Specific ESP32 chip variant

config ESP32_CPU_FREQ
	int "CPU Frequency (MHz)"
	default 240
	help
	  CPU frequency in MHz

endif

if PLATFORM_STC89

config STC89_CHIP
	string "STC89 Chip Variant"
	default "STC89C52RC"
	help
	  Specific STC89 chip variant

config STC89_CLOCK
	int "Crystal Frequency (MHz)"
	default 11.0592
	help
	  Crystal frequency in MHz

endif
